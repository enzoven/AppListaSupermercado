<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppListaSupermercado.View.NovoProduto"
             Title="Novo Produto"

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Salvar" Clicked="ToolbarItem_Clicked" />
    </ContentPage.ToolbarItems>

    <ContentPage.Content>

        <StackLayout>
            <Label Text="Nome Produto:"/>
            <Entry x:Name="txt_descricao"/>

            <Label Text="Quantidade:"/>
            <Entry x:Name="txt_quantidade"/>

            <Label Text= "Preço Unitário"/>
            <Entry x:Name="txt_preco_unitario"/>
            
          

        </StackLayout>

    </ContentPage.Content>
</ContentPage>